{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "lib": ["esnext.asynciterable", "es2017"],
        "sourceMap": false,
        "newLine": "LF",
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "tmdb": ["../tmdb/src"],
            "shared": ["../shared/src"],
            "contracts": ["src/contracts.d.ts"]
        }
    },
    "include": ["src/**/*.ts", "typings/**/*"],
    "references": [{ "path": "../tmdb" }, { "path": "../shared" }]
}
