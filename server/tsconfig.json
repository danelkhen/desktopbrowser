{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2019",
        "moduleResolution": "Node",
        "lib": ["esnext.asynciterable", "es2019", "DOM"],
        "sourceMap": true,
        "newLine": "LF",
        "outDir": "dist",
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "typings/**/*"]
}
