{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "moduleResolution": "node",
        "lib": ["esnext.asynciterable", "es2019", "DOM"],
        "sourceMap": true,
        "newLine": "LF",
        "outDir": "dist",
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "typings/**/*"]
}
