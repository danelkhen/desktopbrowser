{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "out",
        "newLine": "LF",
        "rootDir": "src"
    },
    "exclude": [
        "node_modules"
    ]
}