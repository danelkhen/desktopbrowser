{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["esnext.asynciterable", "es2019", "dom"],
        "strict": true,
        "removeComments": true,
        "esModuleInterop": true,
        "newLine": "LF",
        "declaration": true,
        "declarationMap": true,
        "rootDir": "src",
        "outDir": "out",
        "composite": true
    },
    "include": ["src/**/*"]
}
