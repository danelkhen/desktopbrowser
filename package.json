{
    "name": "desktopbrowser",
    "version": "2.0.37",
    "main": "server/dist/server/src/app.js",
    "productName": "Desktop Browser",
    "description": "Desktop Browser",
    "repository": "git@github.com:danelkhen/desktopbrowser.git",
    "author": "Dan-el Khen",
    "license": "MIT",
    "scripts": {
        "dev": "npx concurrently --names \"server,client,client\" \"cd server; npx tsc -w --preserveWatchOutput\" \"cd client; npx tsc -w --noEmit --preserveWatchOutput\" \"cd client; npx webpack serve\"",
        "dev2": "npx concurrently --names \"server,client,client\" \"cd server; npx tsc -w --preserveWatchOutput\" \"cd client; npx tsc -w --noEmit --preserveWatchOutput\" \"cd client; npx webpack --watch\"",
        "build": "cd server; npx tsc && cd ../client; npx webpack --mode production",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "release": "npm version patch && git push && git push --tags"
    },
    "dependencies": {
        "express": "^4.17.1",
        "express-http-proxy": "^1.6.2",
        "fs-extra": "^10.0.0",
        "github-api": "^3.4.0",
        "level": "^8.0.0",
        "lodash": "^4.17.21",
        "moment": "^2.29.1",
        "node-disk-info": "^1.3.0",
        "open": "^8.2.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "semver": "^7.3.8",
        "trash": "^8.1.0",
        "ws": "^8.11.0",
        "electron-log": "^4.3.5",
        "electron-squirrel-startup": "^1.0.0"
    },
    "devDependencies": {
        "@electron/asar": "^3.2.2",
        "electron": "^21.2.3",
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-export-default-from": "^7.8.3",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-react": "^7.9.4",
        "@babel/preset-typescript": "^7.9.0",
        "@electron-forge/cli": "^6.0.0-beta.57",
        "@electron-forge/maker-deb": "^6.0.0-beta.57",
        "@electron-forge/maker-rpm": "^6.0.0-beta.57",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
        "@electron-forge/maker-zip": "^6.0.0-beta.57",
        "@types/express": "^4.17.12",
        "@types/express-http-proxy": "^1.6.1",
        "@types/fs-extra": "^9.0.11",
        "@types/level": "^6.0.0",
        "@types/lodash": "^4.14.170",
        "@types/rimraf": "^3.0.0",
        "@types/semver": "^7.3.6",
        "@types/ws": "^8.5.3",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "concurrently": "^7.5.0",
        "eslint": "^8.27.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "nodemon": "^2.0.2",
        "prettier": "^2.2.1",
        "typescript": "^4.2.3",
        "webpack-cli": "^4.5.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "ignore": [
                    "\\.github",
                    "(?<!dist)/shared",
                    "scripts"
                ],
                "junk": true
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "desktopbrowser"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin",
                        "win32"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}
