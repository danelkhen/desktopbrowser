{
    "name": "desktopbrowser",
    "version": "1.0.0",
    "main": "server/out/server/src/server.js",
    "bin": "server/out/server/src/server.js",
    "repository": "git@github.com:danelkhen/desktopbrowser.git",
    "author": "Dan-el Khen <danelkhen@gmail.com>",
    "license": "MIT",
    "scripts": {
        "dev": "npx concurrently --names \"server,server,client\" \"cd server; npx tsc -w --preserveWatchOutput\" \"cd server; npx nodemon .\" \"cd client; npx webpack serve\"",
        "build": "cd server; npx tsc && cd ../client; npx webpack --mode production",
        "pkg": "ln -s ../../.bin node_modules/pkg/node_modules/.bin; ./server/node_modules/.bin/node-pre-gyp install --directory=./server/node_modules/sqlite3 --target_platform=darwin --target_arch=x64; ./server/node_modules/.bin/node-pre-gyp install --directory=./server/node_modules/sqlite3 --target_platform=win32  --target_arch=x64; pkg .",
        "start": "node ."
    },
    "dependencies": {
        "@babel/plugin-proposal-export-default-from": "^7.8.3",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "concurrently": "^6.0.0",
        "delay-cli": "^1.1.0",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "linaria": "^2.1.0",
        "nodemon": "^2.0.2",
        "pkg": "^5.2.1",
        "prebuild-install": "^6.0.1",
        "prettier": "^2.2.1",
        "typescript": "^4.2.3",
        "webpack-cli": "^4.5.0"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-react": "^7.9.4",
        "@babel/preset-typescript": "^7.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0"
    },
    "pkg": {
        "scripts": [
            "server/out/**/*.js",
            "server/node_modules/sqlite3/**/*.{node,js}"
        ],
        "assets": [
            "client/dist/**/*",
            "client/img/**/*"
        ],
        "targets": [
            "node14-win-x64",
            "node14-macos-x64"
        ]
    }
}
