{
    "name": "desktopbrowser",
    "version": "1.0.0",
    "main": "app/dist/app/src/app.js",
    "repository": "git@github.com:danelkhen/desktopbrowser.git",
    "author": "Dan-el Khen <danelkhen@gmail.com>",
    "license": "MIT",
    "scripts": {
        "dev": "npx concurrently --names \"server,server,client\" \"cd server; npx tsc -w --preserveWatchOutput\" \"cd server; npx nodemon .\" \"cd client; npx webpack serve\"",
        "build": "cd server; npx tsc && cd ../client; npx webpack --mode production",
        "pkg": "ln -s ../../.bin node_modules/pkg/node_modules/.bin; ./server/node_modules/.bin/node-pre-gyp install --directory=./server/node_modules/sqlite3 --target_platform=darwin --target_arch=x64; ./server/node_modules/.bin/node-pre-gyp install --directory=./server/node_modules/sqlite3 --target_platform=win32  --target_arch=x64; pkg .",
        "start": "electron-forge start",
        "app": "electron app/dist/app/src/app.js",
        "package": "electron-forge package",
        "make": "electron-forge make"
    },
    "dependencies": {
        "@babel/plugin-proposal-export-default-from": "^7.8.3",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "body-parser": "^1.19.0",
        "concurrently": "^6.0.0",
        "delay-cli": "^1.1.0",
        "electron-squirrel-startup": "^1.0.0",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "express": "^4.17.1",
        "express-http-proxy": "^1.6.2",
        "linaria": "^2.1.0",
        "moment": "^2.29.1",
        "node-disk-info": "^1.3.0",
        "nodemon": "^2.0.2",
        "open": "^8.2.0",
        "pkg": "^5.2.1",
        "prebuild-install": "^6.0.1",
        "prettier": "^2.2.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.0.2",
        "trash": "^7.1.1",
        "typeorm": "^0.2.34",
        "typescript": "^4.2.3",
        "webpack-cli": "^4.5.0",
        "ws": "^7.4.6"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-react": "^7.9.4",
        "@babel/preset-typescript": "^7.9.0",
        "@electron-forge/cli": "^6.0.0-beta.57",
        "@electron-forge/maker-deb": "^6.0.0-beta.57",
        "@electron-forge/maker-rpm": "^6.0.0-beta.57",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
        "@electron-forge/maker-zip": "^6.0.0-beta.57",
        "electron": "^13.1.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.17.0"
    },
    "pkg": {
        "scripts": [
            "server/out/**/*.js",
            "server/node_modules/sqlite3/**/*.{node,js}"
        ],
        "assets": [
            "client/dist/**/*",
            "client/img/**/*"
        ],
        "targets": [
            "node14-win-x64",
            "node14-macos-x64"
        ]
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "desktopbrowser"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    }
}
